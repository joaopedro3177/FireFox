<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#333"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/ImglogologoSplash"
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_height="150dp"
        android:src="@drawable/firefox"/>


    <TextView
        android:id="@+id/txtSplash"
        android:textColor="#fff"
        android:layout_below="@+id/ImglogologoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Firefox"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:fontFamily="@font/robotomono"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="150dp"
        android:id="@+id/pgbSplash"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSplash"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:layout_marginTop="5dp" />
</RelativeLayout>